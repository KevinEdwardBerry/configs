[user]
	name = KevinEdwardBerry
	email = kevin.berry@improvingenterprises.com

[color]
  branch = auto
  diff = auto
  status = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[alias]
	# commit
	ca = commit --amend
	cw = commit -m "WIP"
	cm = commit -m
	cc = commit -c

	# branch
	b = branch

	# add
	a  = add
	aa = add --update
	ap = add --patch

	# checkout
	c = checkout

	# fetch
	f = fetch

	# merge
	m  = merge
	mm = merge master
	mt = mergetool

    # pull
    pr = pull --rebase

    #push
    pom = push origin master

	# rebase
	r   = rebase
	ri  = rebase --interactive
	rc  = rebase --continue
	rs  = rebase --skip
	ra  = rebase --abort
	rom = rebase origin master

	# diff
	d  = diff
	p  = diff --cached # mnemonic: "patch"
	ds = diff --stat # mnemonic: "diff stat"
	dt = difftool --no-prompt

	# status
	s  = -p status # with pagination
    ss = -p status -s

	# log
	l   = log --pretty=oneline --abbrev-commit
	ll  = log --pretty=oneline --abbrev-commit --max-count=15
	lc  = log --stat --summary
    lg  = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative 
    lga = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative --all

    # clean
    prune = fetch --prune

	# misc
	pi = cherry-pick
	ki = stash --keep-index

	# experimental
	stage = add
	unstage = reset HEAD
	pop = reset --soft HEAD^
	review = log -p --max-count=1
	rv = remote -v
	fp = format-patch --stdout

[achievement]
	upload = true
[credential]
	helper = !'C:\\Users\\Kevin\\AppData\\Roaming\\GitCredStore\\git-credential-winstore.exe'
[push]
	default = simple
